XfSdhTrailTrace ::= TEXTUAL-CONVENTION
    -- XXX DISPLAY-HINT "a*"
    STATUS  current
    DESCRIPTION
        "SDH path/trail trace information.
        The value consists normally only of textual, printable ASCII characters.
        NOTE: The string is internally padded to maximum size."
    SYNTAX  OCTET STRING ( SIZE (0..15) )

XfSdhSignalLabel ::= TEXTUAL-CONVENTION
    DISPLAY-HINT "x"
    STATUS  current
    DESCRIPTION
        "SDH SignalLabel.
        The byte contains the normal SignalLabel information
        (from V5-Byte or C2-Byte depending on VC type).
        In case of extended signal label to be used, the byte contains
        the extended SignalLabel information (from K4-Byte)."
    SYNTAX Integer32 (0..255)


XfTimeDurationSeconds ::= TEXTUAL-CONVENTION
    STATUS          current
    DESCRIPTION
        "Time duration in 1 second resolution."
    SYNTAX Unsigned32 (0..2147483647)

XfTimeDuration100Millis ::= TEXTUAL-CONVENTION
    DISPLAY-HINT    "d-1"   -- SHOW: 12.3 for value=123.
    STATUS          current
    DESCRIPTION
        "Time duration in 100 milliseconds resolution."
    SYNTAX Unsigned32 (0..2147483647)

END
