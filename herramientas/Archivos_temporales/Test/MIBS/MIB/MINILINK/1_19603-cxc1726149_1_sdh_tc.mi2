        TEXTUAL-CONVENTION              FROM SNMPv2-TC
        xfSdhAdm                        FROM XF-TOP-MIB;

    xfSdhTcMIB  MODULE-IDENTITY
        LAST-UPDATED    "200802281200Z"    -- Feb. 28, 2008 at 12:00 GMT
        ORGANIZATION    "Ericsson Communications Germany"
        CONTACT-INFO
            "Jens Engel
             Postal: Ericsson
             Gerberstrasse 33
             71522 Backnang
             Germany
             Phone:  +49 7191/13-3981
